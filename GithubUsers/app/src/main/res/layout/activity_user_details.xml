<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".UserDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/place_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#FF909090"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="16dp"
        android:text="@string/name_place"
        android:textAlignment="center"
        android:textSize="28sp"
        android:paddingTop="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="@string/username_place"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_userName"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:drawableStart="@drawable/ic_baseline_business_24"
        android:drawablePadding="10dip"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="@string/company"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_company"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="10dip"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="@string/location"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_location"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:paddingTop="20dp">

        <TableRow>

            <TextView
                android:id="@+id/tv_repo"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_following"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_followers"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="@string/repos"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="@string/following" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="@string/followers" />
        </TableRow>
    </TableLayout>


</RelativeLayout>